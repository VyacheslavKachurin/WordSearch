    color: rgb(255, 255, 255);
    font-size: 44px;
    text-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
}

.left-btn {
    background-image: url("project://database/Assets/Sprites/ads-btn.png?fileID=2800000&guid=4f9e86ee199ed4fb18fb67b2945640e5&type=3#ads-btn");
    width: 198px;
    height: 196px;
    margin-bottom: 32px;
